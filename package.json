{
  "name": "@rolla-finance/clones-with-immutable-args",
  "author": "Rolla Finance",
  "license": "BSD",
  "version": "1.11.0",
  "description": "Factory for deploying clones with immutable parameters.",
  "files": [
    "*.sol"
  ],
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.6"
  },
  "scripts": {
    "prepublishOnly": "copyfiles -u 1 \"./src/**/*.sol\" --exclude \"./src/test/**/*.sol\" ./",
    "postpublish": "rimraf ./*.sol",
    "prepack": "yarn prepublishOnly",
    "postpack": "yarn postpublish",
    "lint": "forge fmt && yarn solhint",
    "lint:check": "forge fmt --check && yarn solhint:check",
    "solhint": "yarn solhint:check --fix",
    "solhint:check": "solhint --config ./.solhint.json \"src/**/*.sol\""
  },
  "main": "index.js",
  "repository": "git@github.com:RollaProject/clones-with-immutable-args.git",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
